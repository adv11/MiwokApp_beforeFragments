<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.miwok">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Labeling the four different activities present in our app -->

        <activity
            android:name=".PhrasesActivity"
            android:label="@string/PhrasesActivity"
            android:parentActivityName=".MainActivity">

<!--            This is used to create back button in left side of every activity name in all activities.-->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>
        </activity>
        <activity
            android:name=".FamilyActivity"
            android:label="@string/FamilyActivity"
            android:parentActivityName=".MainActivity">
            <!--            This is used to create back button in left side of every activity name in all activities.-->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>
        </activity>
        <activity
            android:name=".ColorsActivity"
            android:label="@string/ColorsActivity"
            android:parentActivityName=".MainActivity">
            <!--            This is used to create back button in left side of every activity name in all activities.-->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>
        </activity>
        <activity
            android:name=".NumbersActivity"
            android:label="@string/NumbersActivity"
            android:parentActivityName=".MainActivity">
            <!--            This is used to create back button in left side of every activity name in all activities.-->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>
        </activity>

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>